<!-- AutoTrade-X v1.0.0 - Cyberpunk RGB Theme -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background Colors - Deep Space -->
    <Color x:Key="BackgroundDarkColor">#05050F</Color>
    <Color x:Key="BackgroundMediumColor">#0A0A1A</Color>
    <Color x:Key="BackgroundLightColor">#101025</Color>

    <!-- Surface Colors - Glass Effect -->
    <Color x:Key="SurfaceColor">#0F0F25</Color>
    <Color x:Key="SurfaceHoverColor">#1A1A40</Color>
    <Color x:Key="SurfaceSelectedColor">#252560</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#8888CC</Color>
    <Color x:Key="TextDisabledColor">#404080</Color>

    <!-- Neon RGB Colors -->
    <Color x:Key="NeonCyan">#00FFFF</Color>
    <Color x:Key="NeonMagenta">#FF00FF</Color>
    <Color x:Key="NeonPurple">#8B5CF6</Color>
    <Color x:Key="NeonBlue">#00AAFF</Color>
    <Color x:Key="NeonPink">#FF0080</Color>
    <Color x:Key="NeonGreen">#00FF88</Color>
    <Color x:Key="NeonOrange">#FF8800</Color>
    <Color x:Key="NeonRed">#FF0055</Color>

    <!-- Trading Colors - Neon -->
    <Color x:Key="SuccessColor">#00FF88</Color>
    <Color x:Key="WarningColor">#FFAA00</Color>
    <Color x:Key="ErrorColor">#FF0055</Color>
    <Color x:Key="InfoColor">#00AAFF</Color>
    <Color x:Key="BuyColor">#00FF88</Color>
    <Color x:Key="SellColor">#FF0055</Color>
    <Color x:Key="ProfitColor">#00FF88</Color>
    <Color x:Key="LossColor">#FF0055</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderColor">#202050</Color>
    <Color x:Key="BorderGlowColor">#4040A0</Color>

    <!-- Solid Brushes -->
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDarkColor}"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMediumColor}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLightColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource SurfaceHoverColor}"/>
    <SolidColorBrush x:Key="SurfaceSelectedBrush" Color="{StaticResource SurfaceSelectedColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource NeonCyan}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource NeonMagenta}"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="{StaticResource NeonPurple}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    <SolidColorBrush x:Key="BuyBrush" Color="{StaticResource BuyColor}"/>
    <SolidColorBrush x:Key="SellBrush" Color="{StaticResource SellColor}"/>
    <SolidColorBrush x:Key="ProfitBrush" Color="{StaticResource ProfitColor}"/>
    <SolidColorBrush x:Key="LossBrush" Color="{StaticResource LossColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderHoverBrush" Color="{StaticResource BorderGlowColor}"/>

    <!-- RGB Animated Gradient -->
    <LinearGradientBrush x:Key="RGBGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF00FF" Offset="0"/>
        <GradientStop Color="#00FFFF" Offset="0.25"/>
        <GradientStop Color="#00FF88" Offset="0.5"/>
        <GradientStop Color="#FFAA00" Offset="0.75"/>
        <GradientStop Color="#FF00FF" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CyberGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#00FFFF" Offset="0"/>
        <GradientStop Color="#FF00FF" Offset="0.5"/>
        <GradientStop Color="#00FFFF" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="NeonPurpleGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#8B5CF6" Offset="0"/>
        <GradientStop Color="#FF0080" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="NeonBlueGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#00AAFF" Offset="0"/>
        <GradientStop Color="#00FFFF" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#05050F" Offset="0"/>
        <GradientStop Color="#101030" Offset="0.5"/>
        <GradientStop Color="#05050F" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GlowBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#00FFFF" Offset="0"/>
        <GradientStop Color="#FF00FF" Offset="0.5"/>
        <GradientStop Color="#00FFFF" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ProfitGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#00FF88" Offset="0"/>
        <GradientStop Color="#00FFCC" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="LossGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF0055" Offset="0"/>
        <GradientStop Color="#FF5588" Offset="1"/>
    </LinearGradientBrush>

    <!-- Glass Effect Brush -->
    <LinearGradientBrush x:Key="GlassBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#20FFFFFF" Offset="0"/>
        <GradientStop Color="#05FFFFFF" Offset="0.5"/>
        <GradientStop Color="#10FFFFFF" Offset="1"/>
    </LinearGradientBrush>

    <!-- Neon Glow Effects -->
    <DropShadowEffect x:Key="CyanGlow" BlurRadius="25" ShadowDepth="0" Color="#00FFFF" Opacity="0.8"/>
    <DropShadowEffect x:Key="MagentaGlow" BlurRadius="25" ShadowDepth="0" Color="#FF00FF" Opacity="0.8"/>
    <DropShadowEffect x:Key="PurpleGlow" BlurRadius="20" ShadowDepth="0" Color="#8B5CF6" Opacity="0.7"/>
    <DropShadowEffect x:Key="GreenGlow" BlurRadius="20" ShadowDepth="0" Color="#00FF88" Opacity="0.7"/>
    <DropShadowEffect x:Key="RedGlow" BlurRadius="20" ShadowDepth="0" Color="#FF0055" Opacity="0.7"/>
    <DropShadowEffect x:Key="BlueGlow" BlurRadius="20" ShadowDepth="0" Color="#00AAFF" Opacity="0.7"/>
    <DropShadowEffect x:Key="CardShadow" BlurRadius="40" ShadowDepth="5" Direction="270" Color="#000000" Opacity="0.6"/>
    <DropShadowEffect x:Key="ButtonShadow" BlurRadius="20" ShadowDepth="0" Color="#00FFFF" Opacity="0.5"/>

</ResourceDictionary>
