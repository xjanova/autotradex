<Window x:Class="AutoTradeX.UI.Views.StrategySelectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Strategy"
        Width="500" Height="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Bool to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Premium ScrollBar Thumb -->
        <Style x:Key="PremiumScrollBarThumb" TargetType="Thumb">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border x:Name="thumbBorder" Background="{TemplateBinding Background}" CornerRadius="5" Margin="2">
                            <Border.Effect>
                                <DropShadowEffect Color="#7C3AED" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PremiumScrollBar" TargetType="ScrollBar">
            <Setter Property="Width" Value="10"/>
            <Setter Property="Background" Value="#15FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Border Background="#15FFFFFF" CornerRadius="5">
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource PremiumScrollBarThumb}">
                                        <Thumb.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#8B5CF6" Offset="0"/>
                                                <GradientStop Color="#7C3AED" Offset="0.5"/>
                                                <GradientStop Color="#6D28D9" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Thumb.Background>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PremiumScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar" Grid.Column="1"
                                       Style="{StaticResource PremiumScrollBar}"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="16" BorderThickness="1" BorderBrush="#40FFFFFF">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A1A2E" Offset="0"/>
                <GradientStop Color="#0D0D1A" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#15FFFFFF" Padding="20,16">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="Select Strategy" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="Choose a trading strategy for this project" FontSize="13" Foreground="#60FFFFFF" Margin="0,4,0,0"/>
                    </StackPanel>
                    <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top"
                            Background="Transparent" Foreground="#80FFFFFF" BorderThickness="0"
                            FontWeight="Bold" FontSize="14" Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Strategy List -->
            <ScrollViewer Grid.Row="1" Style="{StaticResource PremiumScrollViewer}" Padding="16">
                <ItemsControl x:Name="StrategyList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="StrategyCard" Cursor="Hand"
                                    Background="#15FFFFFF" BorderBrush="#25FFFFFF"
                                    BorderThickness="1" CornerRadius="10" Padding="16"
                                    Margin="0,0,0,8" MouseLeftButtonUp="StrategyCard_Click">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Radio Button -->
                                    <RadioButton x:Name="StrategyRadio" Grid.Column="0"
                                                 GroupName="Strategies"
                                                 IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                 VerticalAlignment="Center" Margin="0,0,12,0">
                                        <RadioButton.Template>
                                            <ControlTemplate TargetType="RadioButton">
                                                <Border x:Name="radioBorder" Width="20" Height="20"
                                                        CornerRadius="10" BorderThickness="2"
                                                        BorderBrush="#60FFFFFF" Background="Transparent">
                                                    <Ellipse x:Name="radioCheck" Width="10" Height="10"
                                                             Fill="#7C3AED" Visibility="Collapsed"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="radioBorder" Property="BorderBrush" Value="#7C3AED"/>
                                                        <Setter TargetName="radioCheck" Property="Visibility" Value="Visible"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </RadioButton.Template>
                                    </RadioButton>

                                    <!-- Strategy Info -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" FontSize="15" FontWeight="SemiBold" Foreground="White"/>
                                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#60FFFFFF"
                                                   Margin="0,4,0,0" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>

                                    <!-- AI Badge -->
                                    <Border Grid.Column="2" Background="#307C3AED" CornerRadius="4" Padding="8,4"
                                            VerticalAlignment="Center" Visibility="{Binding AI.EnableAI, Converter={StaticResource BoolToVisibility}}">
                                        <TextBlock Text="AI" Foreground="#A78BFA" FontSize="11" FontWeight="SemiBold"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#10FFFFFF" Padding="20,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel" Click="CancelButton_Click"
                            Background="#20FFFFFF" Foreground="White"
                            BorderBrush="#40FFFFFF" BorderThickness="1"
                            Padding="20,10" Margin="0,0,12,0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#30FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="Select Strategy" Click="SelectButton_Click"
                            Foreground="White" BorderThickness="0"
                            Padding="20,10" Cursor="Hand" FontWeight="SemiBold">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#7C3AED" Offset="0"/>
                                <GradientStop Color="#6D28D9" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}"
                                        CornerRadius="8" Padding="{TemplateBinding Padding}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#7C3AED" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#8B5CF6" Offset="0"/>
                                                    <GradientStop Color="#7C3AED" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
