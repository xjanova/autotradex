<UserControl x:Class="AutoTradeX.UI.Views.ScannerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:AutoTradeX.UI.Controls">

    <UserControl.Resources>
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#20FFFFFF" Offset="0"/>
                        <GradientStop Color="#10FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <Style x:Key="StrategyButton" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="#15FFFFFF" CornerRadius="10" Padding="12,10" Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="icon" Text="{TemplateBinding Tag}" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock x:Name="title" Text="{TemplateBinding Content}" FontWeight="SemiBold" Foreground="White" FontSize="12"/>
                                    <TextBlock x:Name="desc" Text="{TemplateBinding ToolTip}" Foreground="#60FFFFFF" FontSize="10" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#7C3AED" Offset="0"/>
                                            <GradientStop Color="#5B21B6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#25FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10" Padding="16,12" Cursor="Hand">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#10B981" Offset="0"/>
                                    <GradientStop Color="#059669" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Dark ComboBox Style for Scanner -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border" Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="25"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0"
                                                     Content="{TemplateBinding SelectionBoxItem}"
                                                     ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                     VerticalAlignment="Center"
                                                     Margin="8,0,0,0"/>
                                    <Path Grid.Column="1"
                                          Data="M0,0 L4,4 L8,0"
                                          Stroke="#80FFFFFF"
                                          StrokeThickness="1.5"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                    <ToggleButton Grid.ColumnSpan="2"
                                                 IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Focusable="False"
                                                 ClickMode="Press"/>
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide">
                                <Border Background="#1A1A2E"
                                        BorderBrush="#40FFFFFF"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Margin="0,2,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.5" Color="#000000"/>
                                    </Border.Effect>
                                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#7C3AED"/>
                                <Setter TargetName="border" Property="Background" Value="#252540"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#2A2A45"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#353555"/>
                                            <Setter Property="Foreground" Value="#00D4FF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Scanner Controls -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,15,0">
            <StackPanel>
                <!-- Scanner Status -->
                <Border Style="{StaticResource GlassCard}" Margin="0,0,0,15">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <TextBlock Text="SMART SCANNER" FontSize="14" FontWeight="Bold" Foreground="White"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Ellipse x:Name="ScannerStatusDot" Width="10" Height="10" Fill="#808080" Margin="0,0,8,0"/>
                                <TextBlock x:Name="ScannerStatusText" Text="Idle" FontSize="12" Foreground="#808080"/>
                            </StackPanel>
                        </Grid>

                        <Button x:Name="StartScanButton" Content="START SCANNING" Style="{StaticResource ActionButton}"
                                Click="StartScanButton_Click" Margin="0,0,0,10"/>

                        <Button x:Name="StopScanButton" Content="STOP SCANNING" Visibility="Collapsed"
                                Click="StopScanButton_Click" Cursor="Hand" FontWeight="Bold" Foreground="White">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10" Padding="16,12" Cursor="Hand">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#EF4444" Offset="0"/>
                                                <GradientStop Color="#DC2626" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Stats -->
                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Scans" FontSize="10" Foreground="#60FFFFFF" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="ScanCountDisplay" Text="0" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Found" FontSize="10" Foreground="#60FFFFFF" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="OpportunityCountDisplay" Text="0" FontSize="18" FontWeight="Bold" Foreground="#10B981" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Score" FontSize="10" Foreground="#60FFFFFF" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="BestScoreDisplay" Text="0" FontSize="18" FontWeight="Bold" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Strategy Selection -->
                <Border Style="{StaticResource GlassCard}" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="SCAN STRATEGY" FontSize="11" FontWeight="Bold" Foreground="#60FFFFFF" Margin="0,0,0,12"/>

                        <RadioButton x:Name="StrategyArbitrage" Style="{StaticResource StrategyButton}" IsChecked="True"
                                     Content="Arbitrage Best" Tag="ðŸ’°" ToolTip="à¸«à¸² spread à¸—à¸µà¹ˆà¸”à¸µà¸—à¸µà¹ˆà¸ªà¸¸à¸”à¸£à¸°à¸«à¸§à¹ˆà¸²à¸‡ exchanges" GroupName="Strategy"
                                     Margin="0,0,0,8"/>
                        <RadioButton x:Name="StrategyPriceDrop" Style="{StaticResource StrategyButton}"
                                     Content="Price Drop" Tag="ðŸ“‰" ToolTip="à¸«à¸²à¹€à¸«à¸£à¸µà¸¢à¸à¸—à¸µà¹ˆà¸£à¸²à¸„à¸²à¸¥à¸”à¸¥à¸‡à¸¡à¸²à¸ (Buy the dip)" GroupName="Strategy"
                                     Margin="0,0,0,8"/>
                        <RadioButton x:Name="StrategyVolatility" Style="{StaticResource StrategyButton}"
                                     Content="High Volatility" Tag="ðŸ“Š" ToolTip="à¸«à¸²à¹€à¸«à¸£à¸µà¸¢à¸à¸—à¸µà¹ˆà¸¡à¸µà¸„à¸§à¸²à¸¡à¸œà¸±à¸™à¸œà¸§à¸™à¸ªà¸¹à¸‡ (Trade swings)" GroupName="Strategy"
                                     Margin="0,0,0,8"/>
                        <RadioButton x:Name="StrategyVolume" Style="{StaticResource StrategyButton}"
                                     Content="Volume Surge" Tag="ðŸ“ˆ" ToolTip="à¸«à¸²à¹€à¸«à¸£à¸µà¸¢à¸à¸—à¸µà¹ˆà¸¡à¸µ volume à¹€à¸žà¸´à¹ˆà¸¡à¸‚à¸¶à¹‰à¸™à¸œà¸´à¸”à¸›à¸à¸•à¸´" GroupName="Strategy"
                                     Margin="0,0,0,8"/>
                        <RadioButton x:Name="StrategyMomentum" Style="{StaticResource StrategyButton}"
                                     Content="Momentum Up" Tag="ðŸš€" ToolTip="à¸«à¸²à¹€à¸«à¸£à¸µà¸¢à¸à¸—à¸µà¹ˆà¸à¸³à¸¥à¸±à¸‡à¸¡à¸µà¹à¸£à¸‡à¸ªà¹ˆà¸‡à¸‚à¸¶à¹‰à¸™" GroupName="Strategy"
                                     Margin="0,0,0,8"/>
                        <RadioButton x:Name="StrategyGainers" Style="{StaticResource StrategyButton}"
                                     Content="Top Gainers" Tag="ðŸ”¥" ToolTip="à¹€à¸«à¸£à¸µà¸¢à¸à¸—à¸µà¹ˆà¸‚à¸¶à¹‰à¸™à¸¡à¸²à¸à¸—à¸µà¹ˆà¸ªà¸¸à¸”à¸§à¸±à¸™à¸™à¸µà¹‰" GroupName="Strategy"/>
                    </StackPanel>
                </Border>

                <!-- Auto Mode Settings -->
                <Border Style="{StaticResource GlassCard}" Margin="0,0,0,15">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="AUTO MODE" FontSize="11" FontWeight="Bold" Foreground="#60FFFFFF"/>
                            <ToggleButton x:Name="AutoModeToggle" HorizontalAlignment="Right" Cursor="Hand"
                                          Click="AutoModeToggle_Click">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="track" Width="44" Height="24" CornerRadius="12" Background="#333355">
                                            <Ellipse x:Name="thumb" Width="20" Height="20" Fill="White" HorizontalAlignment="Left" Margin="2"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="track" Property="Background" Value="#10B981"/>
                                                <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                        </Grid>
                        <TextBlock Text="à¹€à¸¡à¸·à¹ˆà¸­à¹€à¸›à¸´à¸” Bot à¸ˆà¸°à¹€à¸¥à¸·à¸­à¸à¹€à¸«à¸£à¸µà¸¢à¸à¸—à¸µà¹ˆà¸”à¸µà¸—à¸µà¹ˆà¸ªà¸¸à¸”à¹‚à¸”à¸¢à¸­à¸±à¸•à¹‚à¸™à¸¡à¸±à¸•à¸´" FontSize="11" Foreground="#60FFFFFF" TextWrapping="Wrap"/>

                        <StackPanel Margin="0,15,0,0">
                            <CheckBox x:Name="AutoExecuteCheck" Content="Auto-execute à¹€à¸¡à¸·à¹ˆà¸­à¹€à¸ˆà¸­à¹‚à¸­à¸à¸²à¸ªà¸”à¸µ"
                                      Foreground="White" Margin="0,0,0,8"/>
                            <CheckBox x:Name="NotifyOnOpportunityCheck" Content="à¹à¸ˆà¹‰à¸‡à¹€à¸•à¸·à¸­à¸™à¹€à¸¡à¸·à¹ˆà¸­à¸žà¸šà¹‚à¸­à¸à¸²à¸ª"
                                      Foreground="White" IsChecked="True"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Scan Settings -->
                <Border Style="{StaticResource GlassCard}">
                    <StackPanel>
                        <TextBlock Text="SETTINGS" FontSize="11" FontWeight="Bold" Foreground="#60FFFFFF" Margin="0,0,0,12"/>

                        <TextBlock Text="Min Spread %" FontSize="11" Foreground="#80FFFFFF" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,12">
                            <Slider x:Name="MinSpreadSlider" Minimum="0.01" Maximum="1" Value="0.1"
                                    ValueChanged="MinSpreadSlider_ValueChanged"/>
                            <TextBlock x:Name="MinSpreadValue" Text="0.10%" HorizontalAlignment="Right"
                                       Foreground="White" FontWeight="SemiBold" Margin="0,-20,0,0"/>
                        </Grid>

                        <TextBlock Text="Scan Interval" FontSize="11" Foreground="#80FFFFFF" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,12">
                            <Slider x:Name="ScanIntervalSlider" Minimum="1" Maximum="30" Value="5"
                                    ValueChanged="ScanIntervalSlider_ValueChanged"/>
                            <TextBlock x:Name="ScanIntervalValue" Text="5s" HorizontalAlignment="Right"
                                       Foreground="White" FontWeight="SemiBold" Margin="0,-20,0,0"/>
                        </Grid>

                        <TextBlock Text="Min Score" FontSize="11" Foreground="#80FFFFFF" Margin="0,0,0,5"/>
                        <Grid>
                            <Slider x:Name="MinScoreSlider" Minimum="0" Maximum="100" Value="30"
                                    ValueChanged="MinScoreSlider_ValueChanged"/>
                            <TextBlock x:Name="MinScoreValue" Text="30" HorizontalAlignment="Right"
                                       Foreground="White" FontWeight="SemiBold" Margin="0,-20,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Right Panel - Scan Results -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Summary Stats -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource GlassCard}" Margin="0,0,8,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="BEST SPREAD" FontSize="10" Foreground="#60FFFFFF"/>
                        <TextBlock x:Name="BestSpreadDisplay" Text="0.00%" FontSize="22" FontWeight="Bold" Foreground="#10B981"/>
                        <TextBlock x:Name="BestSpreadPair" Text="-" FontSize="11" Foreground="#60FFFFFF"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource GlassCard}" Margin="4,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="TOP SCORE" FontSize="10" Foreground="#60FFFFFF"/>
                        <TextBlock x:Name="TopScoreDisplay" Text="0" FontSize="22" FontWeight="Bold" Foreground="#F59E0B"/>
                        <TextBlock x:Name="TopScorePair" Text="-" FontSize="11" Foreground="#60FFFFFF"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource GlassCard}" Margin="4,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="TRADEABLE" FontSize="10" Foreground="#60FFFFFF"/>
                        <TextBlock x:Name="TradeableCountDisplay" Text="0" FontSize="22" FontWeight="Bold" Foreground="#00D4FF"/>
                        <TextBlock Text="Above min score" FontSize="11" Foreground="#60FFFFFF"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Style="{StaticResource GlassCard}" Margin="8,0,0,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="EST. PROFIT" FontSize="10" Foreground="#60FFFFFF"/>
                        <TextBlock x:Name="EstProfitDisplay" Text="$0.00" FontSize="22" FontWeight="Bold" Foreground="#7C3AED"/>
                        <TextBlock Text="Per $1000 trade" FontSize="11" Foreground="#60FFFFFF"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Results List -->
            <Border Grid.Row="1" Style="{StaticResource GlassCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="SCAN RESULTS" FontSize="11" FontWeight="Bold" Foreground="#60FFFFFF"/>
                            <Border x:Name="RecommendedBadge" Background="#7C3AED" CornerRadius="10" Padding="10,3" Margin="12,0,0,0" Visibility="Collapsed">
                                <TextBlock Text="AI RECOMMENDED" FontSize="9" Foreground="White" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Sort: " FontSize="11" Foreground="#60FFFFFF" VerticalAlignment="Center"/>
                            <ComboBox x:Name="SortCombo" SelectedIndex="0" Style="{StaticResource DarkComboBox}"
                                      SelectionChanged="SortCombo_SelectionChanged" Width="160">
                                <ComboBoxItem Content="Score (High â†’ Low)"/>
                                <ComboBoxItem Content="Spread (High â†’ Low)"/>
                                <ComboBoxItem Content="Volume (High â†’ Low)"/>
                                <ComboBoxItem Content="Price Change"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Results -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ResultsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding BackgroundColor}" CornerRadius="12" Padding="15" Margin="0,0,0,10" Cursor="Hand"
                                            BorderBrush="{Binding BorderColor}" BorderThickness="{Binding BorderThickness}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Coin Icon -->
                                            <Grid Margin="0,0,15,0">
                                                <controls:CoinIcon Symbol="{Binding BaseAsset}" Size="48"/>
                                                <Border Background="{Binding ScoreBadgeColor}" CornerRadius="10" Padding="4,2"
                                                        HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-5,0">
                                                    <TextBlock Text="{Binding ScoreDisplay}" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                                </Border>
                                            </Grid>

                                            <!-- Coin Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Symbol}" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                                    <Border Visibility="{Binding RecommendedVisibility}" Background="#F59E0B" CornerRadius="4" Padding="6,2" Margin="8,0,0,0">
                                                        <TextBlock Text="HOT" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                                    </Border>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <TextBlock Text="{Binding BestBuyExchange}" FontSize="12" Foreground="#F3BA2F"/>
                                                    <TextBlock Text=" â†’ " FontSize="12" Foreground="#60FFFFFF"/>
                                                    <TextBlock Text="{Binding BestSellExchange}" FontSize="12" Foreground="#23AF91"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding ScoreReason}" FontSize="10" Foreground="#80FFFFFF" Margin="0,3,0,0"/>
                                            </StackPanel>

                                            <!-- Price Info -->
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,20,0" MinWidth="100">
                                                <TextBlock Text="{Binding CurrentPriceDisplay}" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding PriceChangeDisplay}" FontSize="12" Foreground="{Binding PriceChangeColor}" HorizontalAlignment="Right"/>
                                            </StackPanel>

                                            <!-- Spread -->
                                            <StackPanel Grid.Column="3" VerticalAlignment="Center" Margin="0,0,20,0">
                                                <TextBlock Text="SPREAD" FontSize="9" Foreground="#60FFFFFF" HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SpreadDisplay}" FontSize="20" FontWeight="Bold"
                                                           Foreground="{Binding SpreadColor}" HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding EstProfitDisplay}" FontSize="11"
                                                           Foreground="#60FFFFFF" HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Action Button -->
                                            <Button Grid.Column="4" Content="SELECT" VerticalAlignment="Center"
                                                    Cursor="Hand" Click="SelectCoin_Click" Tag="{Binding}">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border CornerRadius="8" Padding="16,10">
                                                            <Border.Background>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                    <GradientStop Color="#7C3AED" Offset="0"/>
                                                                    <GradientStop Color="#5B21B6" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Border.Background>
                                                            <ContentPresenter HorizontalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                                <Button.Foreground>
                                                    <SolidColorBrush Color="White"/>
                                                </Button.Foreground>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State -->
                    <StackPanel x:Name="EmptyState" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ”" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="No opportunities found yet" FontSize="18" Foreground="#80FFFFFF" HorizontalAlignment="Center"/>
                        <TextBlock Text="Click 'Start Scanning' to find the best trading opportunities" FontSize="13" Foreground="#50FFFFFF"
                                   HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>

                    <!-- Loading State -->
                    <Border x:Name="LoadingState" Grid.Row="1" Visibility="Collapsed" Background="#80000000">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ”„" FontSize="36" HorizontalAlignment="Center">
                                <TextBlock.RenderTransform>
                                    <RotateTransform x:Name="LoadingRotate" CenterX="18" CenterY="18"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <TextBlock x:Name="LoadingText" Text="Scanning markets..." FontSize="14" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
