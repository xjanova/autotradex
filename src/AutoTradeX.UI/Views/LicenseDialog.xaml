<Window x:Class="AutoTradeX.UI.Views.LicenseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutoTrade-X License Activation"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="480" Height="620">

    <Window.Resources>
        <!-- Input TextBox Style -->
        <Style x:Key="LicenseInput" TargetType="TextBox">
            <Setter Property="Background" Value="#20FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#7C3AED"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#7C3AED" Offset="0"/>
                        <GradientStop Color="#2563EB" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#80FFFFFF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#40FFFFFF"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="16" Background="#0A0A1A">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5" Color="#7C3AED"/>
        </Border.Effect>

        <Grid>
            <!-- Close Button -->
            <Button x:Name="CloseButton" Click="CloseButton_Click"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Margin="0,16,16,0" Width="32" Height="32"
                    Style="{StaticResource SecondaryButton}" Padding="0">
                <TextBlock Text="‚úï" FontSize="16" Foreground="#80FFFFFF"/>
            </Button>

            <Grid Margin="32,24,32,24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="‚ö°" FontSize="42" HorizontalAlignment="Center"/>
                    <TextBlock Text="AutoTrade-X" FontSize="24" FontWeight="Bold"
                               Foreground="White" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    <TextBlock Text="License Activation" FontSize="13" Foreground="#80FFFFFF"
                               HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- License Status Card -->
                <Border Grid.Row="1" x:Name="StatusCard" Background="#15FFFFFF" CornerRadius="10"
                        Padding="16" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Ellipse x:Name="StatusDot" Width="10" Height="10" Fill="#F59E0B"
                                 VerticalAlignment="Center" Margin="0,0,12,0"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock x:Name="StatusText" Text="Trial Mode" FontSize="14"
                                       FontWeight="SemiBold" Foreground="White"/>
                            <TextBlock x:Name="StatusDetail" Text="30 days remaining"
                                       FontSize="11" Foreground="#80FFFFFF" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- License Key Input -->
                <StackPanel Grid.Row="2" Margin="0,0,0,12">
                    <TextBlock Text="License Key" FontSize="12" Foreground="#80FFFFFF" Margin="0,0,0,6"/>
                    <TextBox x:Name="LicenseKeyInput" Style="{StaticResource LicenseInput}"
                             MaxLength="32" CharacterCasing="Upper"
                             Text="" ToolTip="Enter your license key (e.g., XXXX-XXXX-XXXX-XXXX)"/>
                </StackPanel>

                <!-- Email Input -->
                <StackPanel Grid.Row="3" Margin="0,0,0,16">
                    <TextBlock Text="Email Address" FontSize="12" Foreground="#80FFFFFF" Margin="0,0,0,6"/>
                    <TextBox x:Name="EmailInput" Style="{StaticResource LicenseInput}"
                             Text="" ToolTip="Enter the email used for purchase"/>
                </StackPanel>

                <!-- Error Message -->
                <Border Grid.Row="4" x:Name="ErrorBorder" Background="#20EF4444" CornerRadius="8"
                        Padding="12" Margin="0,0,0,12" Visibility="Collapsed">
                    <TextBlock x:Name="ErrorText" Text="" FontSize="12"
                               Foreground="#EF4444" TextWrapping="Wrap"/>
                </Border>

                <!-- Buttons -->
                <Grid Grid.Row="5" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="ActivateButton" Grid.Column="0"
                            Style="{StaticResource PrimaryButton}"
                            Content="Activate License" Click="ActivateButton_Click"
                            Height="44"/>

                    <Button x:Name="TrialButton" Grid.Column="2"
                            Style="{StaticResource SecondaryButton}"
                            Content="Continue Trial" Click="TrialButton_Click"
                            Height="44"/>
                </Grid>

                <!-- Early Bird Purchase Banner (shown during trial) -->
                <Border Grid.Row="6" x:Name="EarlyBirdBanner"
                        CornerRadius="10" Margin="0,4,0,12"
                        Visibility="Collapsed">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#F59E0B" Offset="0"/>
                            <GradientStop Color="#D97706" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Discount Badge -->
                        <Border Grid.Row="0" Background="#20000000" CornerRadius="10,10,0,0" Padding="12,8">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="üî•" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="EARLY BIRD DISCOUNT" FontSize="12" FontWeight="Bold"
                                           Foreground="#1A0A2E" VerticalAlignment="Center"/>
                                <Border Background="#1A0A2E" CornerRadius="4" Margin="8,0,0,0" Padding="6,2">
                                    <TextBlock x:Name="DiscountPercentText" Text="20% OFF" FontSize="11"
                                               FontWeight="Bold" Foreground="#F59E0B"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Purchase Button -->
                        <Button Grid.Row="1" x:Name="EarlyBirdPurchaseButton" Click="PurchaseLink_Click"
                                Background="Transparent" BorderThickness="0" Cursor="Hand" Padding="16,10">
                            <StackPanel>
                                <TextBlock x:Name="EarlyBirdMessageText"
                                           Text="‡∏£‡∏µ‡∏ö‡∏ã‡∏∑‡πâ‡∏≠‡πÄ‡∏•‡∏¢! ‡πÄ‡∏´‡∏•‡∏∑‡∏≠‡πÄ‡∏ß‡∏•‡∏≤‡∏≠‡∏µ‡∏Å 7 ‡∏ß‡∏±‡∏ô"
                                           FontSize="13" FontWeight="SemiBold" Foreground="#1A0A2E"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="‡∏Ñ‡∏•‡∏¥‡∏Å‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏î‡∏π‡∏£‡∏≤‡∏Ñ‡∏≤‡∏û‡∏¥‡πÄ‡∏®‡∏© ‚Üí" FontSize="11"
                                           Foreground="#40000000" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- Normal Purchase Panel (shown after trial ends or when not eligible for Early Bird) -->
                <StackPanel Grid.Row="6" x:Name="NormalPurchasePanel" Margin="0,4,0,0">
                    <!-- Big Purchase Button with Marquee -->
                    <Border x:Name="PurchaseButton" CornerRadius="10" Margin="0,0,0,8"
                            Cursor="Hand" MouseLeftButtonDown="PurchaseLink_Click">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#7C3AED" Offset="0"/>
                                <GradientStop Color="#6D28D9" Offset="0.5"/>
                                <GradientStop Color="#2563EB" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.5" Color="#7C3AED"/>
                        </Border.Effect>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Border.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                                         From="10" To="20" Duration="0:0:0.8" AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Marquee Discount Banner -->
                            <Border Grid.Row="0" Background="#20000000" CornerRadius="10,10,0,0" Padding="0,6"
                                    ClipToBounds="True">
                                <Canvas Height="16" ClipToBounds="True">
                                    <TextBlock x:Name="MarqueeText" Canvas.Top="0" FontSize="12" FontWeight="SemiBold"
                                               Foreground="#FFD700">
                                        <TextBlock.Text>üî• ‡∏ã‡∏∑‡πâ‡∏≠‡∏Å‡πà‡∏≠‡∏ô‡∏´‡∏°‡∏î Trial ‡∏•‡∏î‡∏ó‡∏±‡∏ô‡∏ó‡∏µ 20%!  ‚Ä¢  üî• ‡∏ã‡∏∑‡πâ‡∏≠‡∏Å‡πà‡∏≠‡∏ô‡∏´‡∏°‡∏î Trial ‡∏•‡∏î‡∏ó‡∏±‡∏ô‡∏ó‡∏µ 20%!  ‚Ä¢  üî• ‡∏ã‡∏∑‡πâ‡∏≠‡∏Å‡πà‡∏≠‡∏ô‡∏´‡∏°‡∏î Trial ‡∏•‡∏î‡∏ó‡∏±‡∏ô‡∏ó‡∏µ 20%!  ‚Ä¢  </TextBlock.Text>
                                        <TextBlock.RenderTransform>
                                            <TranslateTransform x:Name="MarqueeTransform"/>
                                        </TextBlock.RenderTransform>
                                        <TextBlock.Triggers>
                                            <EventTrigger RoutedEvent="TextBlock.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <DoubleAnimation Storyboard.TargetName="MarqueeTransform"
                                                                         Storyboard.TargetProperty="X"
                                                                         From="0" To="-600"
                                                                         Duration="0:0:12"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </TextBlock.Triggers>
                                    </TextBlock>
                                </Canvas>
                            </Border>

                            <!-- Button Content -->
                            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="16,10,16,12">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="üõí" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="‡∏ã‡∏∑‡πâ‡∏≠ License ‡∏ï‡∏≠‡∏ô‡∏ô‡∏µ‡πâ!" FontSize="16" FontWeight="Bold"
                                               Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="‡∏õ‡∏•‡∏î‡∏•‡πá‡∏≠‡∏Ñ‡∏ó‡∏∏‡∏Å‡∏ü‡∏µ‡πÄ‡∏à‡∏≠‡∏£‡πå ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô ‡∏ø792/‡πÄ‡∏î‡∏∑‡∏≠‡∏ô" FontSize="11"
                                           Foreground="#FFFFFFCC" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Deactivate Link -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="DeactivateSeparator" Visibility="Collapsed"/>
                        <TextBlock x:Name="DeactivateTextBlock">
                            <Hyperlink x:Name="DeactivateLink" Click="DeactivateLink_Click"
                                       Foreground="#80FFFFFF" TextDecorations="None">
                                Deactivate License
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- Device ID -->
                <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center"
                            VerticalAlignment="Bottom" Margin="0,12,0,0">
                    <TextBlock Text="Device ID: " FontSize="10" Foreground="#40FFFFFF"/>
                    <TextBlock x:Name="DeviceIdText" Text="Loading..." FontSize="10"
                               Foreground="#60FFFFFF" FontFamily="Consolas"/>
                </StackPanel>
            </Grid>

            <!-- Loading Overlay -->
            <Border x:Name="LoadingOverlay" Background="#E0000000" Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="‚è≥" FontSize="32" HorizontalAlignment="Center">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotation" CenterX="16" CenterY="16"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock x:Name="LoadingText" Text="Activating..."
                               FontSize="14" Foreground="White" Margin="0,12,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
