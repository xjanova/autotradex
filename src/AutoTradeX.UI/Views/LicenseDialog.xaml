<Window x:Class="AutoTradeX.UI.Views.LicenseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutoTrade-X License Activation"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="480" Height="620">

    <Window.Resources>
        <!-- Input TextBox Style -->
        <Style x:Key="LicenseInput" TargetType="TextBox">
            <Setter Property="Background" Value="#20FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#7C3AED"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#7C3AED" Offset="0"/>
                        <GradientStop Color="#2563EB" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#80FFFFFF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#40FFFFFF"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="16" Background="#0A0A1A">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5" Color="#7C3AED"/>
        </Border.Effect>

        <Grid>
            <!-- Close Button -->
            <Button x:Name="CloseButton" Click="CloseButton_Click"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Margin="0,16,16,0" Width="32" Height="32"
                    Style="{StaticResource SecondaryButton}" Padding="0">
                <TextBlock Text="✕" FontSize="16" Foreground="#80FFFFFF"/>
            </Button>

            <Grid Margin="32,24,32,24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="⚡" FontSize="42" HorizontalAlignment="Center"/>
                    <TextBlock Text="AutoTrade-X" FontSize="24" FontWeight="Bold"
                               Foreground="White" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    <TextBlock Text="License Activation" FontSize="13" Foreground="#80FFFFFF"
                               HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- License Status Card -->
                <Border Grid.Row="1" x:Name="StatusCard" Background="#15FFFFFF" CornerRadius="10"
                        Padding="16" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Ellipse x:Name="StatusDot" Width="10" Height="10" Fill="#F59E0B"
                                 VerticalAlignment="Center" Margin="0,0,12,0"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock x:Name="StatusText" Text="Trial Mode" FontSize="14"
                                       FontWeight="SemiBold" Foreground="White"/>
                            <TextBlock x:Name="StatusDetail" Text="30 days remaining"
                                       FontSize="11" Foreground="#80FFFFFF" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- License Key Input -->
                <StackPanel Grid.Row="2" Margin="0,0,0,12">
                    <TextBlock Text="License Key" FontSize="12" Foreground="#80FFFFFF" Margin="0,0,0,6"/>
                    <TextBox x:Name="LicenseKeyInput" Style="{StaticResource LicenseInput}"
                             MaxLength="32" CharacterCasing="Upper"
                             Text="" ToolTip="Enter your license key (e.g., XXXX-XXXX-XXXX-XXXX)"/>
                </StackPanel>

                <!-- Email Input -->
                <StackPanel Grid.Row="3" Margin="0,0,0,16">
                    <TextBlock Text="Email Address" FontSize="12" Foreground="#80FFFFFF" Margin="0,0,0,6"/>
                    <TextBox x:Name="EmailInput" Style="{StaticResource LicenseInput}"
                             Text="" ToolTip="Enter the email used for purchase"/>
                </StackPanel>

                <!-- Error Message -->
                <Border Grid.Row="4" x:Name="ErrorBorder" Background="#20EF4444" CornerRadius="8"
                        Padding="12" Margin="0,0,0,12" Visibility="Collapsed">
                    <TextBlock x:Name="ErrorText" Text="" FontSize="12"
                               Foreground="#EF4444" TextWrapping="Wrap"/>
                </Border>

                <!-- Buttons -->
                <Grid Grid.Row="5" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="ActivateButton" Grid.Column="0"
                            Style="{StaticResource PrimaryButton}"
                            Content="Activate License" Click="ActivateButton_Click"
                            Height="44"/>

                    <Button x:Name="TrialButton" Grid.Column="2"
                            Style="{StaticResource SecondaryButton}"
                            Content="Continue Trial" Click="TrialButton_Click"
                            Height="44"/>
                </Grid>

                <!-- Links -->
                <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                    <TextBlock>
                        <Hyperlink x:Name="PurchaseLink" Click="PurchaseLink_Click"
                                   Foreground="#7C3AED" TextDecorations="None">
                            Purchase License
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock x:Name="DeactivateSeparator" Text="  |  " Foreground="#40FFFFFF"/>
                    <TextBlock x:Name="DeactivateTextBlock">
                        <Hyperlink x:Name="DeactivateLink" Click="DeactivateLink_Click"
                                   Foreground="#80FFFFFF" TextDecorations="None">
                            Deactivate
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>

                <!-- Device ID -->
                <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center"
                            VerticalAlignment="Bottom" Margin="0,12,0,0">
                    <TextBlock Text="Device ID: " FontSize="10" Foreground="#40FFFFFF"/>
                    <TextBlock x:Name="DeviceIdText" Text="Loading..." FontSize="10"
                               Foreground="#60FFFFFF" FontFamily="Consolas"/>
                </StackPanel>
            </Grid>

            <!-- Loading Overlay -->
            <Border x:Name="LoadingOverlay" Background="#E0000000" Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="⏳" FontSize="32" HorizontalAlignment="Center">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotation" CenterX="16" CenterY="16"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock x:Name="LoadingText" Text="Activating..."
                               FontSize="14" Foreground="White" Margin="0,12,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
