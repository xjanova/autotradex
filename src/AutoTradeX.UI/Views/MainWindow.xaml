                                <Ellipse Width="100" Height="100" Canvas.Left="150" Canvas.Top="100">
                                    <Ellipse.Fill>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#607C3AED" Offset="0"/>
                                            <GradientStop Color="#3000D4FF" Offset="0.5"/>
                                            <GradientStop Color="#00000000" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Ellipse.Fill>
                                </Ellipse>

                                <!-- Splash Hyperdrive streaks -->
                                <Line x:Name="SplashLine1" X1="200" Y1="150" X2="0" Y2="0" Stroke="#8000D4FF" StrokeThickness="2" Opacity="0">
                                    <Line.Effect><BlurEffect Radius="3"/></Line.Effect>
                                </Line>
                                <Line x:Name="SplashLine2" X1="200" Y1="150" X2="400" Y2="0" Stroke="#807C3AED" StrokeThickness="2" Opacity="0">
                                    <Line.Effect><BlurEffect Radius="3"/></Line.Effect>
                                </Line>
                                <Line x:Name="SplashLine3" X1="200" Y1="150" X2="0" Y2="300" Stroke="#807C3AED" StrokeThickness="2" Opacity="0">
                                    <Line.Effect><BlurEffect Radius="3"/></Line.Effect>
                                </Line>
                                <Line x:Name="SplashLine4" X1="200" Y1="150" X2="400" Y2="300" Stroke="#8000D4FF" StrokeThickness="2" Opacity="0">
                                    <Line.Effect><BlurEffect Radius="3"/></Line.Effect>
                                </Line>
                                <Line x:Name="SplashLine5" X1="200" Y1="150" X2="50" Y2="0" Stroke="#6010B981" StrokeThickness="1.5" Opacity="0"/>
                                <Line x:Name="SplashLine6" X1="200" Y1="150" X2="350" Y2="0" Stroke="#60FFFFFF" StrokeThickness="1.5" Opacity="0"/>
                                <Line x:Name="SplashLine7" X1="200" Y1="150" X2="0" Y2="150" Stroke="#607C3AED" StrokeThickness="1.5" Opacity="0"/>
                                <Line x:Name="SplashLine8" X1="200" Y1="150" X2="400" Y2="150" Stroke="#6000D4FF" StrokeThickness="1.5" Opacity="0"/>
                                <Line x:Name="SplashLine9" X1="200" Y1="150" X2="100" Y2="300" Stroke="#60FFFFFF" StrokeThickness="1.5" Opacity="0"/>
                                <Line x:Name="SplashLine10" X1="200" Y1="150" X2="300" Y2="300" Stroke="#6010B981" StrokeThickness="1.5" Opacity="0"/>

                                <!-- Star particles -->
                                <Ellipse x:Name="SplashStar1" Width="4" Height="4" Fill="#A000D4FF" Canvas.Left="200" Canvas.Top="150" Opacity="0"/>
                                <Ellipse x:Name="SplashStar2" Width="3" Height="3" Fill="#A07C3AED" Canvas.Left="200" Canvas.Top="150" Opacity="0"/>
                                <Ellipse x:Name="SplashStar3" Width="3" Height="3" Fill="#A0FFFFFF" Canvas.Left="200" Canvas.Top="150" Opacity="0"/>
                                <Ellipse x:Name="SplashStar4" Width="4" Height="4" Fill="#A010B981" Canvas.Left="200" Canvas.Top="150" Opacity="0"/>
                            </Canvas>
                        </Grid>

                        <!-- Logo Glow -->
                        <Border>
                            <Border.Background>
                                <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.6" RadiusY="0.6">
                                    <GradientStop Color="#407C3AED" Offset="0"/>
                                    <GradientStop Color="#2000D4FF" Offset="0.5"/>
                                    <GradientStop Color="#00000000" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>

                        <!-- Logo Image -->
                        <Image Source="/Assets/logo2.png" Stretch="Uniform" Margin="40"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <!-- Edge Fade -->
                        <Border VerticalAlignment="Bottom" Height="60">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#00000000" Offset="0"/>
                                    <GradientStop Color="#FF0A0A1A" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>

                    <!-- Loading Text -->
                    <StackPanel x:Name="LoadingPanel" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <TextBlock x:Name="LoadingText" Text="Initializing..."
                                   FontSize="16" FontWeight="Light" Foreground="#80FFFFFF"
                                   HorizontalAlignment="Center"/>

                        <!-- Loading Progress Bar -->
                        <Border Background="#15FFFFFF" CornerRadius="4" Height="6" Width="200" Margin="0,15,0,0">
                            <Border x:Name="LoadingProgress" Background="#7C3AED" CornerRadius="4"
                                    HorizontalAlignment="Left" Width="0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#7C3AED" Opacity="0.7"/>
                                </Border.Effect>
                            </Border>
                        </Border>

                        <!-- Version & License Info -->
                        <StackPanel HorizontalAlignment="Center" Margin="0,25,0,0">
                            <TextBlock Text="v0.1.0-beta" FontSize="13" FontWeight="SemiBold" Foreground="#60FFFFFF"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Developed by Xman Studio" FontSize="11" Foreground="#50FFFFFF"
                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Text="Licensed for Educational Use Only" FontSize="10" Foreground="#30FFFFFF"
                                       HorizontalAlignment="Center" Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
        </Grid>
    </Border>
</Window>
