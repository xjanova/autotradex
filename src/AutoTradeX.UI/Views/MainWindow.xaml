<Window x:Class="AutoTradeX.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AutoTradeX.UI.Views"
        xmlns:controls="clr-namespace:AutoTradeX.UI.Controls"
        Title="AutoTrade-X Pro" Height="890" Width="1400"
        MinWidth="400" MinHeight="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        Background="Transparent"
        Icon="/Assets/logo.png"
        SizeChanged="Window_SizeChanged"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Animated Gradient for Background -->
        <Storyboard x:Key="GradientAnimation" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="GradientStop1"
                           Storyboard.TargetProperty="Color"
                           From="#0A0A1A" To="#1A0A2E" Duration="0:0:8" AutoReverse="True"/>
            <ColorAnimation Storyboard.TargetName="GradientStop2"
                           Storyboard.TargetProperty="Color"
                           From="#0D1B2A" To="#1B0A3A" Duration="0:0:6" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="FloatingOrb1"
                            Storyboard.TargetProperty="(Canvas.Top)"
                            From="100" To="600" Duration="0:0:15" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="FloatingOrb1"
                            Storyboard.TargetProperty="(Canvas.Left)"
                            From="100" To="1100" Duration="0:0:20" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="FloatingOrb2"
                            Storyboard.TargetProperty="(Canvas.Top)"
                            From="500" To="50" Duration="0:0:18" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="FloatingOrb2"
                            Storyboard.TargetProperty="(Canvas.Left)"
                            From="900" To="200" Duration="0:0:12" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="FloatingOrb3"
                            Storyboard.TargetProperty="(Canvas.Top)"
                            From="300" To="700" Duration="0:0:22" AutoReverse="True"/>
        </Storyboard>

        <!-- Glass Card Style -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#20FFFFFF" Offset="0"/>
                        <GradientStop Color="#10FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Premium Button -->
        <Style x:Key="PremiumButton" TargetType="Button">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10" Padding="20,12">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#7C3AED" Offset="0"/>
                                    <GradientStop Color="#2563EB" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#8B5CF6" Offset="0"/>
                                            <GradientStop Color="#3B82F6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Start Button -->
        <Style x:Key="StartButton" TargetType="Button">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="12" Padding="30,14">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#10B981" Offset="0"/>
                                    <GradientStop Color="#059669" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.5" Color="#10B981"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stop Button -->
        <Style x:Key="StopButton" TargetType="Button">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="12" Padding="30,14">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#EF4444" Offset="0"/>
                                    <GradientStop Color="#DC2626" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#F87171" Offset="0"/>
                                            <GradientStop Color="#EF4444" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Trading Pulse Animation -->
        <Storyboard x:Key="TradingPulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="TradingPulse1"
                            Storyboard.TargetProperty="Opacity"
                            From="0.8" To="0.2" Duration="0:0:1" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="TradingPulse2"
                            Storyboard.TargetProperty="Opacity"
                            From="0.3" To="0.8" Duration="0:0:0.8" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="TradingArrow"
                            Storyboard.TargetProperty="(Canvas.Left)"
                            From="0" To="100" Duration="0:0:1.5" AutoReverse="True"/>
            <ColorAnimation Storyboard.TargetName="TradingGlow"
                           Storyboard.TargetProperty="Color"
                           From="#00D4FF" To="#7C3AED" Duration="0:0:2" AutoReverse="True"/>
        </Storyboard>

        <!-- Data Flow Animation -->
        <Storyboard x:Key="DataFlowAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="DataFlowDot1"
                            Storyboard.TargetProperty="(Canvas.Left)"
                            From="0" To="120" Duration="0:0:2"/>
            <DoubleAnimation Storyboard.TargetName="DataFlowDot2"
                            Storyboard.TargetProperty="(Canvas.Left)"
                            From="0" To="120" Duration="0:0:2" BeginTime="0:0:0.5"/>
            <DoubleAnimation Storyboard.TargetName="DataFlowDot3"
                            Storyboard.TargetProperty="(Canvas.Left)"
                            From="0" To="120" Duration="0:0:2" BeginTime="0:0:1"/>
        </Storyboard>

        <!-- Status Indicator Pulse -->
        <Storyboard x:Key="StatusPulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="StatusGlow"
                            Storyboard.TargetProperty="Opacity"
                            From="1" To="0.3" Duration="0:0:0.8" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="StatusGlowOuter"
                            Storyboard.TargetProperty="Width"
                            From="14" To="24" Duration="0:0:1" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="StatusGlowOuter"
                            Storyboard.TargetProperty="Height"
                            From="14" To="24" Duration="0:0:1" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="StatusGlowOuter"
                            Storyboard.TargetProperty="Opacity"
                            From="0.5" To="0" Duration="0:0:1" AutoReverse="True"/>
        </Storyboard>

        <!-- Exchange Logo Style -->
        <Style x:Key="ExchangeLogo" TargetType="Border">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Tab Style -->
        <Style x:Key="NavTab" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Premium ScrollViewer Style -->
        <Style x:Key="ModernScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="CanContentScroll" Value="False"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Focusable" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid Background="{TemplateBinding Background}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ScrollContentPresenter x:Name="PART_ScrollContentPresenter"
                                                    Grid.Column="0"
                                                    CanContentScroll="False"
                                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                                    Content="{TemplateBinding Content}"
                                                    Margin="{TemplateBinding Padding}"/>

                            <!-- Premium Vertical ScrollBar -->
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Grid.Column="1"
                                       Orientation="Vertical"
                                       Width="8"
                                       Margin="4,8,6,8"
                                       Minimum="0"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       Value="{TemplateBinding VerticalOffset}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}">
                                <ScrollBar.Template>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid x:Name="Root" Width="8">
                                            <!-- Track Background -->
                                            <Border Background="#08FFFFFF" CornerRadius="4" Width="6" HorizontalAlignment="Center"/>
                                            <Track x:Name="PART_Track" IsDirectionReversed="True" Width="8">
                                                <Track.DecreaseRepeatButton>
                                                    <RepeatButton Command="ScrollBar.PageUpCommand" Style="{x:Null}">
                                                        <RepeatButton.Template>
                                                            <ControlTemplate TargetType="RepeatButton">
                                                                <Border Background="Transparent"/>
                                                            </ControlTemplate>
                                                        </RepeatButton.Template>
                                                    </RepeatButton>
                                                </Track.DecreaseRepeatButton>
                                                <Track.IncreaseRepeatButton>
                                                    <RepeatButton Command="ScrollBar.PageDownCommand" Style="{x:Null}">
                                                        <RepeatButton.Template>
                                                            <ControlTemplate TargetType="RepeatButton">
                                                                <Border Background="Transparent"/>
                                                            </ControlTemplate>
                                                        </RepeatButton.Template>
                                                    </RepeatButton>
                                                </Track.IncreaseRepeatButton>
                                                <Track.Thumb>
                                                    <Thumb x:Name="Thumb" Cursor="Hand" Width="6">
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Border x:Name="thumb" CornerRadius="3" MinHeight="40">
                                                                    <Border.Background>
                                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                            <GradientStop Color="#7C3AED" Offset="0"/>
                                                                            <GradientStop Color="#5B21B6" Offset="0.5"/>
                                                                            <GradientStop Color="#7C3AED" Offset="1"/>
                                                                        </LinearGradientBrush>
                                                                    </Border.Background>
                                                                    <Border.Effect>
                                                                        <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.5" Color="#7C3AED"/>
                                                                    </Border.Effect>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="thumb" Property="Background">
                                                                            <Setter.Value>
                                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                                    <GradientStop Color="#8B5CF6" Offset="0"/>
                                                                                    <GradientStop Color="#7C3AED" Offset="0.5"/>
                                                                                    <GradientStop Color="#8B5CF6" Offset="1"/>
                                                                                </LinearGradientBrush>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                        <Setter TargetName="thumb" Property="Effect">
                                                                            <Setter.Value>
                                                                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.7" Color="#8B5CF6"/>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Trigger>
                                                                    <Trigger Property="IsDragging" Value="True">
                                                                        <Setter TargetName="thumb" Property="Background">
                                                                            <Setter.Value>
                                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                                    <GradientStop Color="#A78BFA" Offset="0"/>
                                                                                    <GradientStop Color="#8B5CF6" Offset="0.5"/>
                                                                                    <GradientStop Color="#A78BFA" Offset="1"/>
                                                                                </LinearGradientBrush>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                        <Setter TargetName="thumb" Property="Effect">
                                                                            <Setter.Value>
                                                                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.9" Color="#A78BFA"/>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </ScrollBar.Template>
                            </ScrollBar>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border" Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0"
                                                     Content="{TemplateBinding SelectionBoxItem}"
                                                     ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                     VerticalAlignment="Center"
                                                     Margin="10,0,0,0"/>
                                    <Path Grid.Column="1"
                                          Data="M0,0 L4,4 L8,0"
                                          Stroke="#80FFFFFF"
                                          StrokeThickness="1.5"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                    <ToggleButton Grid.ColumnSpan="2"
                                                 IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Focusable="False"
                                                 ClickMode="Press"/>
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide">
                                <Border Background="#1A1A2E"
                                        BorderBrush="#40FFFFFF"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Margin="0,4,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5" Color="#000000"/>
                                    </Border.Effect>
                                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#7C3AED"/>
                                <Setter TargetName="border" Property="Background" Value="#252540"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ComboBoxItem Style -->
        <Style x:Key="DarkComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2A45"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#353555"/>
                                <Setter Property="Foreground" Value="#00D4FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource GradientAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <!-- Main Container -->
    <Border BorderThickness="0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop x:Name="GradientStop1" Color="#0A0A1A" Offset="0"/>
                <GradientStop x:Name="GradientStop2" Color="#0D1B2A" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <!-- Animated Background Orbs -->
            <Canvas IsHitTestVisible="False">
                <Ellipse x:Name="FloatingOrb1" Width="300" Height="300" Canvas.Left="100" Canvas.Top="100">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#207C3AED" Offset="0"/>
                            <GradientStop Color="#00000000" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <Ellipse x:Name="FloatingOrb2" Width="400" Height="400" Canvas.Left="900" Canvas.Top="500">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#2000D4FF" Offset="0"/>
                            <GradientStop Color="#00000000" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <Ellipse x:Name="FloatingOrb3" Width="250" Height="250" Canvas.Left="500" Canvas.Top="300">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#15F59E0B" Offset="0"/>
                            <GradientStop Color="#00000000" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
            </Canvas>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <!-- Title Bar -->
                <Border Grid.Row="0" Background="#15FFFFFF">
                    <Grid Margin="20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Logo with Image -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Width="44" Height="44" CornerRadius="12" Margin="0,0,12,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#1A1A2E" Offset="0"/>
                                        <GradientStop Color="#0D0D1A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.5" Color="#7C3AED"/>
                                </Border.Effect>
                                <Image Source="/Assets/logo2.png" Width="36" Height="36"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="AutoTrade-X" FontSize="20" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock Text="v0.1.0-beta" FontSize="10" Foreground="#50FFFFFF" VerticalAlignment="Bottom" Margin="6,0,0,3"/>
                                </StackPanel>
                                <TextBlock Text="by Xman Studio • PRO EDITION" FontSize="9" Foreground="#F59E0B" Margin="0,-1,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Navigation -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Border x:Name="DashboardTab" Style="{StaticResource NavTab}" Background="#20FFFFFF" Margin="5,0"
                                    MouseLeftButtonDown="DashboardTab_Click">
                                <TextBlock Text="Dashboard" FontWeight="SemiBold" Foreground="White"/>
                            </Border>
                            <Border x:Name="TradingTab" Style="{StaticResource NavTab}" Margin="5,0"
                                    MouseLeftButtonDown="TradingTab_Click">
                                <TextBlock Text="Trading" FontWeight="Medium" Foreground="#80FFFFFF"/>
                            </Border>
                            <Border x:Name="ScannerTab" Style="{StaticResource NavTab}" Margin="5,0"
                                    MouseLeftButtonDown="ScannerTab_Click">
                                <TextBlock Text="Scanner" FontWeight="Medium" Foreground="#80FFFFFF"/>
                            </Border>
                            <Border x:Name="HistoryTab" Style="{StaticResource NavTab}" Margin="5,0"
                                    MouseLeftButtonDown="HistoryTab_Click">
                                <TextBlock Text="History" FontWeight="Medium" Foreground="#80FFFFFF"/>
                            </Border>
                            <Border x:Name="SettingsTab" Style="{StaticResource NavTab}" Margin="5,0"
                                    MouseLeftButtonDown="SettingsTab_Click">
                                <TextBlock Text="Settings" FontWeight="Medium" Foreground="#80FFFFFF"/>
                            </Border>
                        </StackPanel>

                        <!-- Mode Indicator -->
                        <Border Grid.Column="2" CornerRadius="20" Padding="15,6" Margin="0,0,20,0" VerticalAlignment="Center">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#F59E0B" Offset="0"/>
                                    <GradientStop Color="#D97706" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="DEMO MODE" FontSize="11" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text=" • $10,000" FontSize="11" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Border>

                        <!-- Window Controls -->
                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                            <Button Content="─" Width="40" Height="36" FontSize="14"
                                    Background="Transparent" Foreground="#80FFFFFF" BorderThickness="0"
                                    Click="MinimizeButton_Click" Cursor="Hand"/>
                            <Button Content="□" Width="40" Height="36" FontSize="14"
                                    Background="Transparent" Foreground="#80FFFFFF" BorderThickness="0"
                                    Click="MaximizeButton_Click" Cursor="Hand"/>
                            <Button Content="✕" Width="40" Height="36" FontSize="12"
                                    Background="Transparent" Foreground="#80FFFFFF" BorderThickness="0"
                                    Click="CloseButton_Click" Cursor="Hand"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Main Content -->
                <Grid Grid.Row="1" Margin="20,10,20,10">
                    <!-- Dashboard Content -->
                    <ScrollViewer x:Name="DashboardScrollViewer" Style="{StaticResource ModernScrollViewerStyle}">
                    <Grid x:Name="DashboardContent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="LeftColumn" Width="280" MinWidth="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition x:Name="RightColumn" Width="320" MinWidth="280"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel - Logo, Trading Pairs & Bot Schedule -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <!-- Logo Section with Hyperdrive Animation -->
                        <Viewbox Stretch="Uniform" StretchDirection="DownOnly" MaxHeight="180" Margin="0,0,0,10">
                            <Grid Width="280" Height="160" ClipToBounds="True">
