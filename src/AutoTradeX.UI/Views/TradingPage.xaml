<UserControl x:Class="AutoTradeX.UI.Views.TradingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:AutoTradeX.UI.Controls">

    <UserControl.Resources>
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#20FFFFFF" Offset="0"/>
                        <GradientStop Color="#10FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10" Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border" Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="25"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0"
                                                     Content="{TemplateBinding SelectionBoxItem}"
                                                     ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                     VerticalAlignment="Center"
                                                     Margin="8,0,0,0"/>
                                    <Path Grid.Column="1"
                                          Data="M0,0 L4,4 L8,0"
                                          Stroke="#80FFFFFF"
                                          StrokeThickness="1.5"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                    <ToggleButton Grid.ColumnSpan="2"
                                                 IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Focusable="False"
                                                 ClickMode="Press"/>
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide">
                                <Border Background="#1A1A2E"
                                        BorderBrush="#40FFFFFF"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Margin="0,2,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.5" Color="#000000"/>
                                    </Border.Effect>
                                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#7C3AED"/>
                                <Setter TargetName="border" Property="Background" Value="#252540"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#2A2A45"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#353555"/>
                                            <Setter Property="Foreground" Value="#00D4FF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Active Trading Pairs -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <!-- Active Pairs -->
            <Border Style="{StaticResource GlassCard}" Margin="0,0,0,15">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="ACTIVE TRADING PAIRS" FontSize="11" FontWeight="Bold" Foreground="#60FFFFFF"/>
                        <Button x:Name="AddPairButton" Content="+ Add Pair" HorizontalAlignment="Right"
                                Background="#7C3AED" Click="AddPairButton_Click" Style="{StaticResource ActionButton}"
                                Padding="12,6" FontSize="11"/>
                    </Grid>

                    <ListBox x:Name="TradingPairsList" Background="Transparent" BorderThickness="0"
                             SelectionChanged="TradingPairsList_SelectionChanged"
                             ItemsSource="{Binding TradingPairs}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#15FFFFFF" CornerRadius="10" Padding="12" Margin="0,0,0,8" Cursor="Hand">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <controls:CoinIcon Symbol="{Binding BaseAsset}" Size="36" Margin="0,0,12,0"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Symbol}" FontWeight="SemiBold" Foreground="White" FontSize="14"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding ExchangeA}" FontSize="11" Foreground="#60FFFFFF"/>
                                                <TextBlock Text=" → " FontSize="11" Foreground="#40FFFFFF"/>
                                                <TextBlock Text="{Binding ExchangeB}" FontSize="11" Foreground="#60FFFFFF"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentSpread, StringFormat={}{0:F3}%}"
                                                       FontWeight="Bold" HorizontalAlignment="Right"
                                                       Foreground="{Binding SpreadColor}"/>
                                            <TextBlock Text="{Binding Status}" FontSize="10"
                                                       Foreground="{Binding StatusColor}" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Quick Actions -->
            <Border Style="{StaticResource GlassCard}">
                <StackPanel>
                    <TextBlock Text="QUICK ACTIONS" FontSize="11" FontWeight="Bold" Foreground="#60FFFFFF" Margin="0,0,0,15"/>

                    <Button x:Name="ScanAllButton" Content="Scan All Pairs" Margin="0,0,0,10"
                            Style="{StaticResource ActionButton}" Click="ScanAllButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#00D4FF" Offset="0"/>
                                <GradientStop Color="#0099CC" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <Button x:Name="PauseAllButton" Content="Pause All Trading" Margin="0,0,0,10"
                            Style="{StaticResource ActionButton}" Click="PauseAllButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#F59E0B" Offset="0"/>
                                <GradientStop Color="#D97706" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <Button x:Name="EmergencyStopButton" Content="EMERGENCY STOP"
                            Style="{StaticResource ActionButton}" Click="EmergencyStopButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#EF4444" Offset="0"/>
                                <GradientStop Color="#DC2626" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Center Panel - Selected Pair Details -->
        <Grid Grid.Column="1" Margin="10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Selected Pair Header -->
            <Border Grid.Row="0" Style="{StaticResource GlassCard}" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <controls:CoinIcon x:Name="SelectedCoinIcon" Symbol="BTC" Size="48" Margin="0,0,15,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock x:Name="SelectedPairName" Text="BTC/USDT" FontSize="24" FontWeight="Bold" Foreground="White"/>
                            <TextBlock x:Name="SelectedPairExchanges" Text="Binance → KuCoin" FontSize="12" Foreground="#60FFFFFF"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Current Spread: " FontSize="14" Foreground="#80FFFFFF" VerticalAlignment="Center"/>
                            <TextBlock x:Name="SelectedSpread" Text="0.15%" FontSize="28" FontWeight="Bold" Foreground="#10B981"/>
                        </StackPanel>
                        <TextBlock x:Name="SelectedProfitEstimate" Text="Est. Profit: $12.50 per trade"
                                   FontSize="12" Foreground="#60FFFFFF" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Price Comparison -->
            <Border Grid.Row="1" Style="{StaticResource GlassCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="LIVE PRICE COMPARISON" FontSize="11" FontWeight="Bold" Foreground="#60FFFFFF" Margin="0,0,0,20"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Exchange A -->
                        <Border Grid.Column="0" CornerRadius="12" Padding="20">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#15F3BA2F" Offset="0"/>
                                    <GradientStop Color="#08F3BA2F" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <controls:ExchangeIcon x:Name="ExchangeAIcon" ExchangeName="Binance" Size="36" Margin="0,0,10,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock x:Name="ExchangeAName" Text="BINANCE" FontSize="14" FontWeight="Bold" Foreground="#F3BA2F"/>
                                        <TextBlock Text="BUY HERE" FontSize="10" Foreground="#10B981"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock x:Name="ExchangeAPrice" Text="$0.00" FontSize="32" FontWeight="Bold" Foreground="White"/>

                                <Grid Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="BID" FontSize="10" Foreground="#50FFFFFF"/>
                                        <TextBlock x:Name="ExchangeABid" Text="$0.00" FontSize="14" Foreground="#10B981" FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="ASK" FontSize="10" Foreground="#50FFFFFF"/>
                                        <TextBlock x:Name="ExchangeAAsk" Text="$0.00" FontSize="14" Foreground="#EF4444" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>

                                <Border Background="#10FFFFFF" CornerRadius="8" Padding="12,10" Margin="0,15,0,0">
                                    <Grid>
                                        <StackPanel>
                                            <TextBlock Text="AVAILABLE BALANCE" FontSize="9" Foreground="#50FFFFFF"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock x:Name="ExchangeABalance" Text="0.00" FontSize="16" Foreground="White" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="ExchangeABalanceAsset" Text=" USDT" FontSize="12" Foreground="#60FFFFFF" VerticalAlignment="Bottom"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Arrow -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                            <Path Data="M0,10 L20,0 L20,7 L40,7 L40,13 L20,13 L20,20 Z" Fill="#7C3AED" HorizontalAlignment="Center"/>
                            <TextBlock Text="ARBITRAGE" FontSize="10" FontWeight="Bold" Foreground="#7C3AED"
                                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>

                        <!-- Exchange B -->
                        <Border Grid.Column="2" CornerRadius="12" Padding="20">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1523AF91" Offset="0"/>
                                    <GradientStop Color="#0823AF91" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <controls:ExchangeIcon x:Name="ExchangeBIcon" ExchangeName="KuCoin" Size="36" Margin="0,0,10,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock x:Name="ExchangeBName" Text="KUCOIN" FontSize="14" FontWeight="Bold" Foreground="#23AF91"/>
                                        <TextBlock Text="SELL HERE" FontSize="10" Foreground="#EF4444"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock x:Name="ExchangeBPrice" Text="$0.00" FontSize="32" FontWeight="Bold" Foreground="White"/>

                                <Grid Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="BID" FontSize="10" Foreground="#50FFFFFF"/>
                                        <TextBlock x:Name="ExchangeBBid" Text="$0.00" FontSize="14" Foreground="#10B981" FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="ASK" FontSize="10" Foreground="#50FFFFFF"/>
                                        <TextBlock x:Name="ExchangeBAsk" Text="$0.00" FontSize="14" Foreground="#EF4444" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>

                                <Border Background="#10FFFFFF" CornerRadius="8" Padding="12,10" Margin="0,15,0,0">
                                    <Grid>
                                        <StackPanel>
                                            <TextBlock Text="AVAILABLE BALANCE" FontSize="9" Foreground="#50FFFFFF"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock x:Name="ExchangeBBalance" Text="0.00" FontSize="16" Foreground="White" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="ExchangeBBalanceAsset" Text=" USDT" FontSize="12" Foreground="#60FFFFFF" VerticalAlignment="Bottom"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Trade Controls -->
            <Border Grid.Row="2" Style="{StaticResource GlassCard}" Margin="0,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="TRADE AMOUNT" FontSize="11" FontWeight="Bold" Foreground="#60FFFFFF" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TradeAmountInput" Text="100" FontSize="18" FontWeight="SemiBold"
                                     Background="#15FFFFFF" Foreground="White" BorderThickness="0"
                                     Padding="15,12" VerticalContentAlignment="Center"/>
                            <ComboBox x:Name="TradeAmountUnit" Grid.Column="1" Width="100" Margin="10,0,0,0"
                                      SelectedIndex="0" Style="{StaticResource DarkComboBox}">
                                <ComboBoxItem Content="USDT"/>
                                <ComboBoxItem Content="BTC"/>
                                <ComboBoxItem Content="%"/>
                            </ComboBox>
                        </Grid>
                        <TextBlock x:Name="EstimatedProfit" Text="Estimated Profit: $0.15" FontSize="12" Foreground="#10B981" Margin="0,10,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                        <Button x:Name="ManualTradeButton" Content="Execute Trade" Margin="0,0,10,0"
                                Style="{StaticResource ActionButton}" Click="ManualTradeButton_Click">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#10B981" Offset="0"/>
                                    <GradientStop Color="#059669" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button x:Name="AutoTradeToggle" Content="Auto: OFF"
                                Style="{StaticResource ActionButton}" Click="AutoTradeToggle_Click">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#7C3AED" Offset="0"/>
                                    <GradientStop Color="#5B21B6" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Right Panel - Order Book & Recent Trades -->
        <StackPanel Grid.Column="2" Margin="10,0,0,0">
            <!-- Order Book -->
            <Border Style="{StaticResource GlassCard}" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="ORDER BOOK DEPTH" FontSize="11" FontWeight="Bold" Foreground="#60FFFFFF" Margin="0,0,0,15"/>

                    <!-- Asks (Sells) -->
                    <TextBlock Text="ASKS (SELL ORDERS)" FontSize="9" Foreground="#EF4444" Margin="0,0,0,5"/>
                    <ItemsControl x:Name="AsksDisplay">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="#20EF4444" Height="20" HorizontalAlignment="Right"
                                            Width="{Binding DepthPercent}" CornerRadius="2" Grid.ColumnSpan="3"/>
                                    <TextBlock Text="{Binding Price, StringFormat=F2}" Foreground="#EF4444" FontSize="11"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Amount, StringFormat=F4}" Foreground="#80FFFFFF" FontSize="11" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Total, StringFormat=F2}" Foreground="#60FFFFFF" FontSize="11" HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Spread -->
                    <Border Background="#20FFFFFF" CornerRadius="4" Padding="10,8" Margin="0,10">
                        <Grid>
                            <TextBlock Text="SPREAD" FontSize="10" Foreground="#60FFFFFF"/>
                            <TextBlock x:Name="OrderBookSpread" Text="$0.00 (0.00%)" FontSize="12" FontWeight="Bold" Foreground="#7C3AED" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Bids (Buys) -->
                    <TextBlock Text="BIDS (BUY ORDERS)" FontSize="9" Foreground="#10B981" Margin="0,0,0,5"/>
                    <ItemsControl x:Name="BidsDisplay">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="#2010B981" Height="20" HorizontalAlignment="Left"
                                            Width="{Binding DepthPercent}" CornerRadius="2" Grid.ColumnSpan="3"/>
                                    <TextBlock Text="{Binding Price, StringFormat=F2}" Foreground="#10B981" FontSize="11"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Amount, StringFormat=F4}" Foreground="#80FFFFFF" FontSize="11" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Total, StringFormat=F2}" Foreground="#60FFFFFF" FontSize="11" HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Recent Executions -->
            <Border Style="{StaticResource GlassCard}">
                <StackPanel>
                    <TextBlock Text="RECENT EXECUTIONS" FontSize="11" FontWeight="Bold" Foreground="#60FFFFFF" Margin="0,0,0,15"/>

                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding RecentExecutions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#15FFFFFF" CornerRadius="8" Padding="10" Margin="0,0,0,6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Symbol}" FontWeight="SemiBold" Foreground="White" FontSize="12"/>
                                                <TextBlock Text="{Binding TimeAgo}" FontSize="10" Foreground="#60FFFFFF"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding PnLDisplay}" FontWeight="Bold"
                                                           Foreground="{Binding PnLColor}" HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding ExecutionTime}" FontSize="10"
                                                           Foreground="#60FFFFFF" HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
