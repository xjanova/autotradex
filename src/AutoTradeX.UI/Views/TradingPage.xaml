                                            <TextBlock Text="SPOT" FontSize="9" FontWeight="Bold" Foreground="#10B981"/>
                                        </Border>
                                        <Border x:Name="ExchangeAFutures" Style="{StaticResource ModeTagStyle}" Background="#20F59E0B">
                                            <TextBlock Text="FUTURES" FontSize="9" FontWeight="Bold" Foreground="#F59E0B"/>
                                        </Border>
                                        <Border x:Name="ExchangeAMargin" Style="{StaticResource ModeTagStyle}" Background="#207C3AED">
                                            <TextBlock Text="MARGIN" FontSize="9" FontWeight="Bold" Foreground="#7C3AED"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Price Display -->
                                    <TextBlock x:Name="ExchangeAPrice" Text="$0.00" FontSize="28" FontWeight="Bold" Foreground="White"/>

                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="BID" FontSize="9" Foreground="#50FFFFFF"/>
                                            <TextBlock x:Name="ExchangeABid" Text="$0.00" FontSize="13" Foreground="#10B981" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="ASK" FontSize="9" Foreground="#50FFFFFF"/>
                                            <TextBlock x:Name="ExchangeAAsk" Text="$0.00" FontSize="13" Foreground="#EF4444" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Balance -->
                                    <Border Background="#10FFFFFF" CornerRadius="8" Padding="10,8" Margin="0,12,0,0">
                                        <StackPanel>
                                            <TextBlock Text="AVAILABLE BALANCE" FontSize="8" Foreground="#50FFFFFF"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                <TextBlock x:Name="ExchangeABalance" Text="0.00" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="ExchangeABalanceAsset" Text=" USDT" FontSize="11" Foreground="#60FFFFFF" VerticalAlignment="Bottom"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!-- Manual Trading Form A -->
                                    <Border x:Name="ManualTradingFormA" Background="#10FFFFFF" CornerRadius="10" Padding="12" Margin="0,12,0,0">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,10">
                                                <TextBlock Text="MANUAL BUY" FontSize="10" FontWeight="Bold" Foreground="#10B981"/>
                                                <Border x:Name="BotBlockingOverlayA" Visibility="Collapsed" Background="#80000000" CornerRadius="6"
                                                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="-12,-12,-12,0">
                                                    <TextBlock Text="Turn off bot to trade manually" FontSize="10" Foreground="#F59E0B"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </Grid>

                                            <TextBlock Text="Amount" FontSize="9" Foreground="#60FFFFFF" Margin="0,0,0,4"/>
                                            <TextBox x:Name="ManualAmountA" Style="{StaticResource DarkTextBox}" Text="100" FontSize="13"/>

                                            <TextBlock Text="Price (leave empty for market)" FontSize="9" Foreground="#60FFFFFF" Margin="0,8,0,4"/>
                                            <TextBox x:Name="ManualPriceA" Style="{StaticResource DarkTextBox}" FontSize="13"
                                                     ToolTip="Leave empty for market order"/>

                                            <Grid Margin="0,10,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Button x:Name="BuyMarketA" Content="MARKET" Grid.Column="0" Margin="0,0,4,0"
                                                        Style="{StaticResource SmallActionButton}" Click="ManualBuyA_Click" Tag="Market">
                                                    <Button.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#10B981" Offset="0"/>
                                                            <GradientStop Color="#059669" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Button.Background>
                                                </Button>
                                                <Button x:Name="BuyLimitA" Content="LIMIT" Grid.Column="1" Margin="4,0,0,0"
                                                        Style="{StaticResource SmallActionButton}" Click="ManualBuyA_Click" Tag="Limit">
                                                    <Button.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#0EA5E9" Offset="0"/>
                                                            <GradientStop Color="#0284C7" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Button.Background>
                                                </Button>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- Center Arrow with Bot Animation -->
                            <Grid Grid.Column="1" VerticalAlignment="Center">
                                <StackPanel>
                                    <!-- Animated Data Flow Lines -->
                                    <Canvas x:Name="ArrowFlowCanvas" Width="80" Height="60" Margin="0,0,0,5">
                                        <!-- Main Arrow -->
                                        <Path Canvas.Left="10" Canvas.Top="25"
                                              Data="M0,5 L15,0 L15,3 L50,3 L50,7 L15,7 L15,10 Z"
                                              Fill="#7C3AED"/>

                                        <!-- Flow Particles -->
                                        <Ellipse x:Name="FlowParticle1" Width="4" Height="4" Fill="#00D4FF"
                                                 Canvas.Left="15" Canvas.Top="28" Opacity="0"/>
                                        <Ellipse x:Name="FlowParticle2" Width="3" Height="3" Fill="#7C3AED"
                                                 Canvas.Left="25" Canvas.Top="28" Opacity="0"/>
                                        <Ellipse x:Name="FlowParticle3" Width="4" Height="4" Fill="#10B981"
                                                 Canvas.Left="35" Canvas.Top="28" Opacity="0"/>
                                    </Canvas>

                                    <TextBlock Text="ARBITRAGE" FontSize="9" FontWeight="Bold" Foreground="#7C3AED" HorizontalAlignment="Center"/>

                                    <!-- Spread Display -->
                                    <Border Background="#207C3AED" CornerRadius="6" Padding="8,4" Margin="0,8,0,0" HorizontalAlignment="Center">
                                        <TextBlock x:Name="CenterSpreadDisplay" Text="0.15%" FontSize="12" FontWeight="Bold" Foreground="#00D4FF"/>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <!-- Exchange B Panel (SELL) -->
                            <Border Grid.Column="2" CornerRadius="12" Padding="16">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#1523AF91" Offset="0"/>
                                        <GradientStop Color="#0823AF91" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel>
                                    <!-- Exchange Header with Modes -->
                                    <Grid Margin="0,0,0,12">
                                        <StackPanel Orientation="Horizontal">
                                            <controls:ExchangeIcon x:Name="ExchangeBIcon" ExchangeName="KuCoin" Size="36" Margin="0,0,10,0"/>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock x:Name="ExchangeBName" Text="KUCOIN" FontSize="14" FontWeight="Bold" Foreground="#23AF91"/>
                                                <TextBlock Text="SELL HERE" FontSize="10" Foreground="#EF4444"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <Button x:Name="ExchangeBApiGuide" Content="?" HorizontalAlignment="Right" VerticalAlignment="Top"
                                                Width="20" Height="20" FontSize="11" FontWeight="Bold"
                                                Background="#30FFFFFF" Foreground="#80FFFFFF" Cursor="Hand"
                                                ToolTip="API Setup Guide" Click="ApiGuideButton_Click" Tag="B">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>

                                    <!-- Supported Modes -->
                                    <StackPanel x:Name="ExchangeBModesPanel" Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Style="{StaticResource ModeTagStyle}" Background="#2010B981">
                                            <TextBlock Text="SPOT" FontSize="9" FontWeight="Bold" Foreground="#10B981"/>
                                        </Border>
                                        <Border x:Name="ExchangeBFutures" Style="{StaticResource ModeTagStyle}" Background="#20F59E0B">
                                            <TextBlock Text="FUTURES" FontSize="9" FontWeight="Bold" Foreground="#F59E0B"/>
                                        </Border>
                                        <Border x:Name="ExchangeBMargin" Style="{StaticResource ModeTagStyle}" Background="#207C3AED" Visibility="Collapsed">
                                            <TextBlock Text="MARGIN" FontSize="9" FontWeight="Bold" Foreground="#7C3AED"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Price Display -->
                                    <TextBlock x:Name="ExchangeBPrice" Text="$0.00" FontSize="28" FontWeight="Bold" Foreground="White"/>

                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="BID" FontSize="9" Foreground="#50FFFFFF"/>
                                            <TextBlock x:Name="ExchangeBBid" Text="$0.00" FontSize="13" Foreground="#10B981" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="ASK" FontSize="9" Foreground="#50FFFFFF"/>
                                            <TextBlock x:Name="ExchangeBAsk" Text="$0.00" FontSize="13" Foreground="#EF4444" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Balance -->
                                    <Border Background="#10FFFFFF" CornerRadius="8" Padding="10,8" Margin="0,12,0,0">
                                        <StackPanel>
                                            <TextBlock Text="AVAILABLE BALANCE" FontSize="8" Foreground="#50FFFFFF"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                <TextBlock x:Name="ExchangeBBalance" Text="0.00" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="ExchangeBBalanceAsset" Text=" USDT" FontSize="11" Foreground="#60FFFFFF" VerticalAlignment="Bottom"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!-- Manual Trading Form B -->
                                    <Border x:Name="ManualTradingFormB" Background="#10FFFFFF" CornerRadius="10" Padding="12" Margin="0,12,0,0">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,10">
                                                <TextBlock Text="MANUAL SELL" FontSize="10" FontWeight="Bold" Foreground="#EF4444"/>
                                                <Border x:Name="BotBlockingOverlayB" Visibility="Collapsed" Background="#80000000" CornerRadius="6"
                                                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="-12,-12,-12,0">
                                                    <TextBlock Text="Turn off bot to trade manually" FontSize="10" Foreground="#F59E0B"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </Grid>

                                            <TextBlock Text="Amount" FontSize="9" Foreground="#60FFFFFF" Margin="0,0,0,4"/>
                                            <TextBox x:Name="ManualAmountB" Style="{StaticResource DarkTextBox}" Text="100" FontSize="13"/>

                                            <TextBlock Text="Price (leave empty for market)" FontSize="9" Foreground="#60FFFFFF" Margin="0,8,0,4"/>
                                            <TextBox x:Name="ManualPriceB" Style="{StaticResource DarkTextBox}" FontSize="13"
                                                     ToolTip="Leave empty for market order"/>

                                            <Grid Margin="0,10,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Button x:Name="SellMarketB" Content="MARKET" Grid.Column="0" Margin="0,0,4,0"
                                                        Style="{StaticResource SmallActionButton}" Click="ManualSellB_Click" Tag="Market">
                                                    <Button.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#EF4444" Offset="0"/>
                                                            <GradientStop Color="#DC2626" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Button.Background>
                                                </Button>
                                                <Button x:Name="SellLimitB" Content="LIMIT" Grid.Column="1" Margin="4,0,0,0"
                                                        Style="{StaticResource SmallActionButton}" Click="ManualSellB_Click" Tag="Limit">
                                                    <Button.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#F97316" Offset="0"/>
                                                            <GradientStop Color="#EA580C" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Button.Background>
                                                </Button>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- API Setup Guide Panel (Collapsible) -->
                        <Border x:Name="ApiGuidePanel" Grid.Row="2" Background="#15FFFFFF" CornerRadius="12"
                                Padding="16" Margin="0,15,0,0" Visibility="Collapsed">
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <TextBlock Text="API SETUP GUIDE" FontSize="12" FontWeight="Bold" Foreground="#00D4FF"/>
                                    <Button x:Name="CloseApiGuide" Content="X" HorizontalAlignment="Right"
                                            Width="24" Height="24" FontSize="12" FontWeight="Bold"
                                            Background="#30FFFFFF" Foreground="#80FFFFFF" Cursor="Hand"
                                            Click="CloseApiGuide_Click">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>

                                <TextBlock x:Name="ApiGuideExchangeName" Text="Binance API Setup" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>

                                <TextBlock Text="Required API Permissions:" FontSize="11" FontWeight="Bold" Foreground="#F59E0B" Margin="0,0,0,8"/>

                                <StackPanel x:Name="ApiPermissionsList">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="✓" FontSize="12" Foreground="#10B981" Margin="0,0,8,0"/>
                                        <TextBlock Text="Enable Reading" FontSize="11" Foreground="#80FFFFFF"/>
                                        <TextBlock Text=" - View balances and orders" FontSize="10" Foreground="#50FFFFFF"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="✓" FontSize="12" Foreground="#10B981" Margin="0,0,8,0"/>
                                        <TextBlock Text="Enable Spot Trading" FontSize="11" Foreground="#80FFFFFF"/>
                                        <TextBlock Text=" - Execute spot trades" FontSize="10" Foreground="#50FFFFFF"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="✓" FontSize="12" Foreground="#10B981" Margin="0,0,8,0"/>
                                        <TextBlock Text="Enable Futures (Optional)" FontSize="11" Foreground="#80FFFFFF"/>
                                        <TextBlock Text=" - For futures trading" FontSize="10" Foreground="#50FFFFFF"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="✗" FontSize="12" Foreground="#EF4444" Margin="0,0,8,0"/>
                                        <TextBlock Text="Withdrawals" FontSize="11" Foreground="#60FFFFFF" TextDecorations="Strikethrough"/>
                                        <TextBlock Text=" - NOT NEEDED (keep disabled)" FontSize="10" Foreground="#EF4444"/>
                                    </StackPanel>
                                </StackPanel>

                                <Border Background="#20F59E0B" CornerRadius="8" Padding="12" Margin="0,12,0,0">
                                    <StackPanel>
                                        <TextBlock Text="SECURITY TIPS:" FontSize="10" FontWeight="Bold" Foreground="#F59E0B" Margin="0,0,0,6"/>
                                        <TextBlock TextWrapping="Wrap" FontSize="10" Foreground="#80FFFFFF" LineHeight="16">
                                            • Never enable withdrawal permissions
                                            • Restrict API to your IP address only
                                            • Use separate API keys for each bot
                                            • Regularly rotate your API keys
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <Button x:Name="OpenExchangeApiPage" Content="Open Exchange API Settings" Margin="0,12,0,0"
                                        Style="{StaticResource SmallActionButton}" Click="OpenExchangeApiPage_Click">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#7C3AED" Offset="0"/>
                                            <GradientStop Color="#5B21B6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Border>

            <!-- Trade Controls -->
            <Border Grid.Row="2" Style="{StaticResource GlassCard}" Margin="0,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="TRADE AMOUNT" FontSize="11" FontWeight="Bold" Foreground="#60FFFFFF" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TradeAmountInput" Text="100" FontSize="18" FontWeight="SemiBold"
                                     Background="#15FFFFFF" Foreground="White" BorderThickness="0"
                                     Padding="15,12" VerticalContentAlignment="Center"/>
                            <ComboBox x:Name="TradeAmountUnit" Grid.Column="1" Width="100" Margin="10,0,0,0"
                                      SelectedIndex="0" Style="{StaticResource DarkComboBox}">
                                <ComboBoxItem Content="USDT"/>
                                <ComboBoxItem Content="BTC"/>
                                <ComboBoxItem Content="%"/>
                            </ComboBox>
                        </Grid>
                        <TextBlock x:Name="EstimatedProfit" Text="Estimated Profit: $0.15" FontSize="12" Foreground="#10B981" Margin="0,10,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                        <Button x:Name="ManualTradeButton" Content="Execute Trade" Margin="0,0,10,0"
                                Style="{StaticResource ActionButton}" Click="ManualTradeButton_Click">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#10B981" Offset="0"/>
                                    <GradientStop Color="#059669" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button x:Name="AutoTradeToggle" Content="Auto: OFF"
                                Style="{StaticResource ActionButton}" Click="AutoTradeToggle_Click">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#7C3AED" Offset="0"/>
                                    <GradientStop Color="#5B21B6" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Right Panel - Order Book & Recent Trades -->
        <StackPanel Grid.Column="2" Margin="10,0,0,0">
            <!-- Order Book -->
            <Border Style="{StaticResource GlassCard}" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="ORDER BOOK DEPTH" FontSize="11" FontWeight="Bold" Foreground="#60FFFFFF" Margin="0,0,0,15"/>

                    <!-- Asks (Sells) -->
                    <TextBlock Text="ASKS (SELL ORDERS)" FontSize="9" Foreground="#EF4444" Margin="0,0,0,5"/>
                    <ItemsControl x:Name="AsksDisplay">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="#20EF4444" Height="20" HorizontalAlignment="Right"
                                            Width="{Binding DepthPercent}" CornerRadius="2" Grid.ColumnSpan="3"/>
                                    <TextBlock Text="{Binding Price, StringFormat=F2}" Foreground="#EF4444" FontSize="11"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Amount, StringFormat=F4}" Foreground="#80FFFFFF" FontSize="11" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Total, StringFormat=F2}" Foreground="#60FFFFFF" FontSize="11" HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Spread -->
                    <Border Background="#20FFFFFF" CornerRadius="4" Padding="10,8" Margin="0,10">
                        <Grid>
                            <TextBlock Text="SPREAD" FontSize="10" Foreground="#60FFFFFF"/>
                            <TextBlock x:Name="OrderBookSpread" Text="$0.00 (0.00%)" FontSize="12" FontWeight="Bold" Foreground="#7C3AED" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Bids (Buys) -->
                    <TextBlock Text="BIDS (BUY ORDERS)" FontSize="9" Foreground="#10B981" Margin="0,0,0,5"/>
                    <ItemsControl x:Name="BidsDisplay">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="#2010B981" Height="20" HorizontalAlignment="Left"
                                            Width="{Binding DepthPercent}" CornerRadius="2" Grid.ColumnSpan="3"/>
                                    <TextBlock Text="{Binding Price, StringFormat=F2}" Foreground="#10B981" FontSize="11"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Amount, StringFormat=F4}" Foreground="#80FFFFFF" FontSize="11" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Total, StringFormat=F2}" Foreground="#60FFFFFF" FontSize="11" HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Recent Executions -->
            <Border Style="{StaticResource GlassCard}">
                <StackPanel>
                    <TextBlock Text="RECENT EXECUTIONS" FontSize="11" FontWeight="Bold" Foreground="#60FFFFFF" Margin="0,0,0,15"/>

                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding RecentExecutions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#15FFFFFF" CornerRadius="8" Padding="10" Margin="0,0,0,6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Symbol}" FontWeight="SemiBold" Foreground="White" FontSize="12"/>
                                                <TextBlock Text="{Binding TimeAgo}" FontSize="10" Foreground="#60FFFFFF"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding PnLDisplay}" FontWeight="Bold"
                                                           Foreground="{Binding PnLColor}" HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding ExecutionTime}" FontSize="10"
                                                           Foreground="#60FFFFFF" HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>
        </Grid>
    </Grid>
</UserControl>
