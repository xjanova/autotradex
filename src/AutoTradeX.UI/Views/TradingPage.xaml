                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Exchange A Panel (BUY) -->
                            <Border Grid.Column="0" CornerRadius="12" Padding="16">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#15F3BA2F" Offset="0"/>
                                        <GradientStop Color="#08F3BA2F" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel>
                                    <!-- Exchange Header with Modes -->
                                    <Grid Margin="0,0,0,12">
                                        <StackPanel Orientation="Horizontal">
                                            <controls:ExchangeIcon x:Name="ExchangeAIcon" ExchangeName="Binance" Size="36" Margin="0,0,10,0"/>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock x:Name="ExchangeAName" Text="BINANCE" FontSize="14" FontWeight="Bold" Foreground="#F3BA2F"/>
                                                <TextBlock Text="BUY HERE" FontSize="10" Foreground="#10B981"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <Button x:Name="ExchangeAApiGuide" Content="?" HorizontalAlignment="Right" VerticalAlignment="Top"
                                                Width="20" Height="20" FontSize="11" FontWeight="Bold"
                                                Background="#30FFFFFF" Foreground="#80FFFFFF" Cursor="Hand"
                                                ToolTip="API Setup Guide" Click="ApiGuideButton_Click" Tag="A">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
