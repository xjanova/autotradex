                                                <RadialGradientBrush>
                                                    <GradientStop Color="#5010B981" Offset="0"/>
                                                    <GradientStop Color="#0010B981" Offset="1"/>
                                                </RadialGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <Ellipse x:Name="BotPulse2" Width="12" Height="12" Canvas.Left="4" Canvas.Top="4" Opacity="0">
                                            <Ellipse.Fill>
                                                <RadialGradientBrush>
                                                    <GradientStop Color="#8010B981" Offset="0"/>
                                                    <GradientStop Color="#0010B981" Offset="1"/>
                                                </RadialGradientBrush>
