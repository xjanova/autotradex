{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$comment": "============================================================================\nAutoTrade-X Configuration File\n============================================================================\n⚠️ IMPORTANT DISCLAIMER:\nThis software is for EDUCATIONAL and EXPERIMENTAL purposes only.\nNO PROFIT IS GUARANTEED. Cryptocurrency trading involves significant risk.\nYou are solely responsible for your own decisions and risks.\n\n⚠️ SECURITY NOTICE:\n- NEVER store API keys/secrets in this file!\n- Use ENVIRONMENT VARIABLES instead\n- Set: BINANCE_API_KEY, BINANCE_API_SECRET, BYBIT_API_KEY, BYBIT_API_SECRET\n============================================================================",

  "exchangeA": {
    "name": "Binance",
    "apiBaseUrl": "https://api.binance.com",
    "webSocketUrl": "wss://stream.binance.com:9443/ws",
    "apiKeyEnvVar": "BINANCE_API_KEY",
    "apiSecretEnvVar": "BINANCE_API_SECRET",
    "passphraseEnvVar": null,
    "tradingFeePercent": 0.1,
    "rateLimitPerSecond": 10,
    "timeoutMs": 10000,
    "maxRetries": 3,
    "isEnabled": true
  },

  "exchangeB": {
    "name": "Bybit",
    "apiBaseUrl": "https://api.bybit.com",
    "webSocketUrl": "wss://stream.bybit.com/v5/public/spot",
    "apiKeyEnvVar": "BYBIT_API_KEY",
    "apiSecretEnvVar": "BYBIT_API_SECRET",
    "passphraseEnvVar": null,
    "tradingFeePercent": 0.1,
    "rateLimitPerSecond": 10,
    "timeoutMs": 10000,
    "maxRetries": 3,
    "isEnabled": true
  },

  "strategy": {
    "minSpreadPercentage": 0.3,
    "minExpectedProfitQuoteCurrency": 0.5,
    "pollingIntervalMs": 1000,
    "useWebSocket": false,
    "orderType": "Market",
    "limitOrderSlippagePercent": 0.05,
    "orderFillTimeoutMs": 5000,
    "partialFillStrategy": "CancelRemaining",
    "oneSideFailStrategy": "Hedge",
    "orderBookDepth": 20,
    "minDepthQuantity": 0.1
  },

  "risk": {
    "maxPositionSizePerTrade": 100,
    "maxDailyLoss": 50,
    "maxTradesPerDay": 100,
    "maxTradesPerHour": 20,
    "minTimeBetweenTradesMs": 5000,
    "maxConsecutiveLosses": 5,
    "maxBalancePercentPerTrade": 10,
    "minBalanceRequired": 50
  },

  "general": {
    "liveTrading": false,
    "logDirectory": "logs",
    "logLevel": "Info",
    "logRetentionDays": 30,
    "darkTheme": true,
    "enableNotifications": true,
    "playSoundOnTrade": false,
    "version": "1.0.0"
  },

  "tradingPairs": [
    "BTC/USDT",
    "ETH/USDT"
  ]
}
